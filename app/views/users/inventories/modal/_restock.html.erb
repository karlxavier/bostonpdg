<div class="modal fade bd-example-modal-lg modal-gray" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="restockItem">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Restock: <span class="sub-header-modal">(Add Stocks)</span></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="<%= restock_inventories_path %>" method="POST" >
        <div class="modal-body">
          <input type="hidden" name="inventory_id" id="inventory_id"  />
          <div class="form-group row">
            <label class="col-sm-2 col-form-label label-form col-form-label-right">Item: </label>
            <div class="col-sm-10">
              <span class="item-name"></span>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 col-form-label label-form col-form-label-right">Quantity: </label>
            <div class="col-sm-10">
              <input type="number" name="quantity" id="quantity"  class="form-control glow-input " />
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <div class="buttons pull-left">
            <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
          </div>
          <div class="buttons pull-right">
            <button type="submit" class="ladda-button btn btn-info" data-style="zoom-in">Restock</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<script type="text/javascript">
    $(document).ready(function (){
        Ladda.bind( '.ladda-button',{ timeout: 10000 });

    });
</script>