<div id="modal-shows">
    <div class="modal fade" id="modal-dialog" style="display: none;">
        <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
                <div class="modal-header">
                    <h3 style="color: #242a30;">
                        User Timelog Request
                    </h3>
                    <button type="button" class="close pull-right" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                </div>
                <%= form_for [:users, @user_request], html: { class: "form-horizontal", remote: true } do |f| %>
                    <div class="modal-body">
                        <%= f.hidden_field :request_type, value: :add_request %>
                         <div class="form-group">
                              <label>Reason</label> 
                              <%= f.text_field :remarks, class: "form-control", required: "" %>
                         </div>
                         <div class="form-group">
                            <label>For Date</label> 
                            <div class="input-group date" id="datetimepicker1">
                                <%= f.text_field :date, class: "form-control", placeholder: "Date filter", required: "" %>
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                            </div>
                         </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                        <%= button_tag(type: 'Submit', class: "btn btn-primary") do %>
                            Save Request
                        <% end %> 
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
<script>
    
        $("#datetimepicker1").datetimepicker({
            format:'YYYY-MM-DD',
        });
    
</script>
