              <!--</form>-->
            </div>
          </div>

          <div class="col padding-left">
            <div class="row">
              <div class="col">
                <h4 class="inline-text" style="padding-top: 1%;"><b>Details</b></h4>
                <button class="btn btn-outline-dark float-right" data-toggle="modal" data-target="#editOrderEntries" data-dismiss="modal">MODIFY</button>
                <br/>
                <br/>
                <table class="table table-bordered" id="order-entry-details">
                </table>
              </div>
            </div>
            <div class="row">
              <div class="col">
