<div class="modal fade   modal-gray" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="pictureUpload" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">File Upload: <span class="sub-header-modal product-name-header" id="product-name-header"></span></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" >
        <form action="<%= change_picture_products_path %>" method="POST" enctype="multipart/form-data" id="picture_upload">
          <input type="hidden" name="order_entry_id" id="order_entry_id_2"  />
          <input type="hidden" name="product_id" id="add_product_id_2" />
          <input type="hidden" name="order_id" value="<%= @order.id %>"  />
          <div class="dropzone">
            <div id="dropzonePictureUploadPreview" class="dropzone-previews form-control dz-clickable">
              <div class="dz-message">Drag&drop</div>
            </div>
          </div>
        </form>
      </div>

    </div>
  </div>
</div>