<div id="page-container">
  <div class="login login-with-news-feed">
    <div class="news-feed">
      <div class="news-image" style="background-image: url(<%= image_path 'patient-login-bg.jpg' %>)">
      </div>
      <div class="news-caption">
        <h4 class="caption-title"><b>Boston</b> Pediatric Dental Group</h4>
        <p>
          Lorem Ipsum is simply dummy text of the printing and typesetting industry.
        </p>
      </div>
    </div>
    <div class="right-content" style="background-color: #fff; height: 100vh;">
				<div class="login-header">
					<div class="brand">
						<b>Boston</b> Pediatric
						<small>Dental Group</small>
					</div>
					<div class="icon">
						<%= image_tag 'logo.png', style: "height: 60px;" %>
					</div>
				</div>
				<div id="login-content" class="login-content">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "margin-bottom-0" }, remote: true) do |f| %>
						<%= devise_error_messages! %>
  					<%= render 'layouts/devise_error' %>

						<div class="form-group m-b-15">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", required: "" %>
						</div>
						<div class="form-group m-b-15">
              <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-lg", required: "" %>
						</div>
						<div class="checkbox checkbox-css m-b-30">
							<input type="checkbox" id="remember_me_checkbox" value="">
							<label for="remember_me_checkbox">
							Remember Me
							</label>
						</div>
						<div class="login-buttons">
              <%= f.submit "Sign me in", class: "btn btn-success btn-block btn-lg" %>
						</div>
						<hr>
						<small class="text-center text-grey-darker">
							Â© Boston Pediatric Dental Group All Right Reserved 2019
						</small>
					<% end %>
				</div>
			</div>
  </div>
</div>
