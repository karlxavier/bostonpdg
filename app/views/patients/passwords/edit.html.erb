<div class="login">
      <% if @confirm_patient.present? %>
        <div class="login-header">
              <h1 class="page-header">New Password</h1>
              <div class="m-t-20">
                  In order to protect the security of your account, please create your password.
              </div>
        </div>
        <div class="login-content" style="margin-top: 20px;">
              <div id="error-msgs">
              </div>
              <div id="confirmation-content">
                  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "margin-bottom-0" }) do |f| %>
                        <%= devise_error_messages! %>
                        <%= f.hidden_field :reset_password_token %>
                        <div class="form-group m-b-20">
                            <%= f.password_field :password, autofocus: true, class: "form-control form-control-lg", placeholder: "Password", required: "", autocomplete: "off" %>
                        </div>
                        <div class="form-group m-b-20">
                            <%= f.password_field :password_confirmation, autofocus: true, class: "form-control form-control-lg", placeholder: "Confirm Password", required: "", autocomplete: "off" %>
                        </div>
                        <div class="login-buttons">
                            <%= f.submit "Create my password", class: "btn btn-success btn-block btn-lg" %>
                        </div>
                  <% end %>
              </div>
        </div>
        <% else %>
          <div class="login-content" style="margin-top: 20px;">
            <div id="confirmation-content">
                <div class="alert alert-danger">
                      <i class="fa fa-exclamation-circle fa-2x" style="margin-right: 7px;"></i>
                      Invalid password token. Cannot continue.
                </div>
            </div>
          </div>
      <% end %>
</div>

