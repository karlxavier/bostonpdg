<div class="p-content-container">
     <div class="p-content-title">
          <h2 class="p-content-text">Shared Documents</h2>
     </div>
</div>
<div class="row">
     <div class="col-lg-12">
          <div class="ibox">
               <div class="ibox-title">
                    <%= link_to new_patients_patient_shared_file_path, class: "btn btn-lg btn-white", style: "border-radius: 20px;", remote: true do %>
                         <i class="fas fa-share-alt text-primary" style="padding-right: 10px;"></i> 
                         Share Documents
                    <% end %>
               </div>
               <div id="documents" class="ibox-content" style="background-color: #fff;">
                    <div class="sk-spinner sk-spinner-double-bounce">
                         <div class="sk-double-bounce1"></div>
                         <div class="sk-double-bounce2"></div>
                    </div>
                    <div id="document-list" class="project-list">
                         <div class="p-content">
                              <% if @shared_files.present? %>
                                   <table class="table table-hover">
                                        <tbody>
                                             <% @shared_files.each do |shared_file| %>

                                                  <% 
                                                       if shared_file.document_upload.attachment_data.present?
                                                            attachment_data = JSON.parse(shared_file.document_upload.attachment_data, object_class: OpenStruct) 
                                                            mime_type = attachment_data.original.metadata.mime_type
                                                       else
                                                            attachment_data = ''
                                                            mime_type = ''
                                                       end
                                                  %>

                                                  <tr>
                          
                                                  </tr>
                                             <% end %>
                                        </tbody>
                                   </table>
                              <% else %>
                                   <div class="alert alert-warning">
                                        You dont have any shared files yet.
                                   </div>
                              <% end %>
                         </div>
                    </div>
               </div>
          </div>
     </div>
</div>