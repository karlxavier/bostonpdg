<div id="modal-shows">
    <div class="modal fade" id="modal-dialog" style="display: none;">
        <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
                <div class="modal-header">
                    <h3>
                        Create New Folder
                    </h3>
                    <button type="button" class="close pull-right" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                </div>
                <%= form_for [:admin, DocumentUpload.new], html: { class: "form-horizontal" } do |f| %>
                    <div class="modal-body">
                            <div class="form-group">
                                <label>Folder Name</label> 
                                <%= f.text_field :description, class: "form-control" %>
                                <%= f.hidden_field :document_upload_id, value: @parent.id %>
                            </div>
                            <div class="form-group">
                                <label>Shared To</label>
                                <div class="tabs-container">
                                    <ul class="nav nav-tabs" role="tablist">
                                        <li><a class="nav-link nav-li-a active show" data-toggle="tab" href="#tab-1"> Employees</a></li>
                                        <li><a class="nav-link nav-li-a" data-toggle="tab" href="#tab-2">Patients</a></li>
                                    </ul>
                                    <div class="tab-content">
                                        <div role="tabpanel" id="tab-1" class="tab-pane active show">
                                            <div class="panel-body">
                                                <%= collection_select(:document_upload, :user_ids, 
                                                    User.order(:email),:id,:full_name, 
                                                    {:prompt=>true},
                                                    {class: "select2 form-control", style: "width: 100%;", multiple: true}) 
                                                %>
                                            </div>
                                        </div>
                                        <div role="tabpanel" id="tab-2" class="tab-pane">
                                            <div class="panel-body">
                                                <%= collection_select(:document_upload, :patient_ids, 
                                                    Patient.order(:email),:id,:full_name, 
                                                    {:prompt=>true},
                                                    {class: "select2 form-control", style: "width: 100%;", multiple: true}) 
                                                %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                        <%= button_tag(type: 'Submit', class: "btn btn-primary") do %>
                            Save changes
                        <% end %> 
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
  $(function(){
    $('.chosen-select').chosen({width: "100%"});

    $('.select2').select2();
  })
</script>