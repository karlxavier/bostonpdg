<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Inventories</h2>
        <ol class="breadcrumb">
            <li>
                <%= link_to 'Dashboard', admin_root_path %>
            </li>
            <li>
            	<%= link_to 'Invetory List', admin_inventories_path %>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins" style="font-size: 13px;">
				<div class="ibox-title">
                    <h5></h5>
                    <div class="ibox-tools">
                        <%= link_to 'Create New Inventory', new_admin_inventory_path, class: "btn btn-primary btn-sm" %>
                    </div>
                </div>
				<div class="ibox-content">
					<div class="table-responsive">
						<table class="table table-striped table-bordered table-hover dataTables-list dataTable">
							<thead>
		                    	<tr role="row">
		                    		<th>Id</th>
		                    		<th>Product</th>
		                    		<th>Loc Id</th>
		                    		<th>Bin Id</th>
		                    		<th>Quantity</th>
		                    		<th></th>
		                    </thead>
		                    <tbody>
		                    	<% @inventories.each do |inventory| %>
			                    	<tr>
				                        <td><%= inventory.id %></td>
				                        <td><%= inventory.product.present? ? inventory.product.name : "No Product #{inventory.product_id}" %></td>
				                        <td><%= inventory.loc_id %></td>
				                        <td><%= inventory.bin_id %></td>
				                        <td><%= inventory.quantity %></td>
				                        <td>
				                        	<div class="btn-group">
				                                <%= link_to 'Edit', edit_admin_inventory_path(inventory), class: "btn btn-xs btn-white" %>
				                                <button class="btn btn-xs btn-danger" type="button">Delete</button>
				                            </div>
				                        </td>
				                    </tr>
			                    <% end %>
		                    </tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        $('.dataTables-list').DataTable({
            pageLength: 25,
            responsive: true,
            dom: '<"html5buttons"B>lTfgitp',
            buttons: [
                { extend: 'copy'},
                {extend: 'csv'},
                {extend: 'excel', title: 'ExampleFile'},
                {extend: 'pdf', title: 'ExampleFile'},

                {extend: 'print',
                 customize: function (win){
                        $(win.document.body).addClass('white-bg');
                        $(win.document.body).css('font-size', '10px');

                        $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                }
                }
            ]

        });

    });
</script>