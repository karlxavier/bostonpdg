<div class="login bg-black animated fadeInDown">
	<div class="login-header">
		<div class="brand">
			<div class="row">
				<div class="col-lg-2">
					<%= image_tag 'logo.png', style: "width: 65px; height: 50px;" %>
				</div>
				<div class="col-lg-10">
					<b>Boston Pediatric</b>
					<small>Dental Group</small>
				</div>
			</div>
		</div>
		<div class="icon">
			<i class="fa fa-lock"></i>
		</div>
	</div>
	<div class="login-content">
		<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'margin-bottom-0'} ) do |f| %>
			<%= render 'layouts/static/error_messages' %>
			<div class="form-group m-b-20">
				<%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control form-control-lg inverse-mode', placeholder: 'E-mail', required: "" %>
			</div>
			<div class="form-group m-b-20">
				<%= f.password_field :password, autocomplete: "off", :class => 'form-control form-control-lg inverse-mode', placeholder: 'Password', required: "" %>
			</div>
			<div class="checkbox checkbox-css m-b-20">
				<input type="checkbox" id="remember_checkbox"> 
				<label for="remember_checkbox">
				Remember Me
				</label>
			</div>
			<div class="login-buttons">
				<%= f.submit "Log in", :class => 'btn btn-primary btn-block btn-lg' %>
			</div>
		<% end %>
	</div>
</div>